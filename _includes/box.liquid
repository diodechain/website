{%- if include.data -%}
    {% assign data = page[include.data] %}
{% else %}
    {% assign data = page.story %}
{% endif %}

{%- if data.class -%}
    {% assign class = data.class | prepend: ' ' %}
{% else %}
    {% assign class = "" %}
{% endif %}

{%- if data.animated -%}
<section class="box{{ class }}" data-aos="fade-up" data-aos-offset="300" data-aos-duration="1000" data-aos-once="true">
{% else %}
<section class="box{{ class }}">
{% endif %}
    <div class="row justify-content-md-center text-center" id="{%- if data.id -%}{{ data.id }}{% endif %}">
        <div class="col col-12 col-lg-6 col-xl-7 col-xxl-6">
            {%- if data.icon -%}<img class="box__icon" src="{{ data.icon | prepend: site.path.images | relative_url }}" height="50" alt="{{ data.title }}">{% endif %}
            {%- if data.title -%}<h4 class="box__title">{{ data.title }}</h4>{% endif %}
            {%- if data.heading -%}<h2 class="box__heading">{{ data.heading }}</h2>{% endif %}
        </div>
    </div>
    <div class="row justify-content-md-center text-center">
        {%- if data.content -%}
            <div class="col col-12 col-md-10 col-lg-8 col-xxl-6">
                <div class="box__content">
                    {{ data.content | markdownify }}
                </div>
            </div>
        {% endif %}
        {%- if data.quotes -%}
            <div class="col col-12 col-md-10 col-lg-8">
                <div class="box__testimonials">
                    <div class="swiper">
                        <div class="swiper-wrapper">
                            {% for quote in data.quotes %}
                                <figure class="swiper-slide">
                                    <blockquote><p>{{ quote.quote | markdownify }}</p></blockquote>
                                    {%- if quote.author -%}<figcaption>{{ quote.author }}</figcaption>{% endif %}
                                </figure>
                            {% endfor %}
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>
            </div>
        {% endif %}
        {%- if data.solutions -%}
            {% for solution in data.solutions %}
                <div class="col col-12 col-md-4">
                    <section class="box__solution">
                        {%- if forloop.index <= 4 -%}
                            {%- if solution.icon -%}<img class="box__solution-icon" src="{{ solution.icon | prepend: site.path.images | relative_url }}" height="50" alt="{{ solution.title }}">{% endif %}
                            {%- if solution.image -%}<img class="box__solution-image" src="{{ solution.image | prepend: site.path.images | relative_url }}" height="400" alt="{{ solution.title }}">{% endif %}
                            {%- if solution.title -%}<h3>{{ solution.title }}</h3>{% endif %}
                            {%- if solution.content -%}<p>{{ solution.content }}</p>{% endif %}
                            {% if solution.button -%}
                                {% assign btn_url = solution.button.url %}
                                {% if btn_url and btn_url != "" and btn_url[0] == "/" %}
                                    <a href="{{ btn_url | relative_url }}" class="btn {{ solution.button.class }}" target="{{ solution.button.target }}">{{ solution.button.title }}</a>
                                {% else %}
                                    <a href="{{ btn_url }}" class="btn {{ solution.button.class }}" target="{{ solution.button.target }}">{{ solution.button.title }}</a>
                                {% endif %}
                            {% endif %}
                            {%- if solution.button.popup-video-title -%}<p class="instruction"><a href="#" class="popup-video-trigger" data-video-source="{{ solution.button.popup-video-source | relative_url }}">{%- if solution.button.popup-video-title -%}{{ solution.button.popup-video-title }}{% endif %}</a></p>{% endif %}
                            {%- if solution.button.instructions -%}<p class="instruction"><a href="{{ solution.button.instructions | relative_url }}" target="_blank">{%- if solution.button.instructions-title -%}{{ solution.button.instructions-title }}{% else %}Read More{% endif %}</a></p>{% endif %}
                        {% endif %}
                    </section>
                </div>
            {% endfor %}
        {% endif %}
        {%- if data.buttons -%}
            <div class="box__buttons">
                {% for button in data.buttons %}
                    <a href="{{ button.url }}" class="btn {{ button.class }}" target="{{ button.target }}">{{ button.title }}</a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
